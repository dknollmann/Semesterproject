<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:id="@+id/add_list"
            android:clickable="true"
            android:elegantTextHeight="false"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_column="0"
            android:background="@drawable/addbutton"
            android:onClick="addShoppingList"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView_ShoppingLists"
            android:layout_alignTop="@+id/textView_ShoppingLists"
            />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainList"
            android:layout_toEndOf="@+id/add_list"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/add_list" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Meine Einkaufslisten"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:id="@+id/textView_ShoppingLists"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/btn_test"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="testklick"
        />

        </RelativeLayout>